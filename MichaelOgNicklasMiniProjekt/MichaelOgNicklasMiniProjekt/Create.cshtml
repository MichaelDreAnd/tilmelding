<p>Navn:</p>
<input id="FullNameBox" type="text" />

<p>Telefon:</p>
<input id="PhoneBox" type="text" />

<p>Email:</p>
<input id="EmailBox" type="text" />

<br />
<button onclick="printInfo(FullNameBox.value,PhoneBox.value, EmailBox.value)">Tilmeld</button>



<p style="text-align:center; font-size:24px; margin-top:-250px; "  id="Tilmelding"></p>


<script type="text/javascript">
    function printInfo(FullName, Phone, Email) {
        document.getElementById("Tilmelding").innerHTML =
       "<b>Kvittering</b><br/>"   +  "Navn: " + FullName  + "<br/>Telefon: " + Phone + "<br/>Email: " + Email;
    }
</script>

}

